set gui=tabs
set focuscontent
set hintinputs="label,name"
set hintmatching="wordstartswith"

let mapleader = ","

nnoremap T gT
nnoremap S gt

noremap e f
noremap E F

" {W} -> [É]
noremap é w
noremap É W

" Use {W} as Ctrl+W :
noremap w <C-w>
noremap W <C-w><C-w>
 
" [HJKL] -> {CTSR}
noremap c h
noremap r l
noremap t 3j
noremap s 3k

noremap C H
noremap R L

noremap zs zj
noremap zt zk
 
" {HJKL} <- [CTSR]
" {J} = « Until »              (j = next, J = previous)
noremap j t
noremap J T
" {L} = « Change »             (l = wait for a move, L = until end of the line)
noremap l c
noremap L C
" {H} = « Replace »            (h = only one char, H = stay in replace mode)
noremap h r
noremap H R
" {K} = « Substitute »         (k = char, K = line)
noremap k s
noremap K S
" Spell checking
noremap ]k ]s
noremap [k [s

" Direct access to numbers
noremap \" 1
noremap 1 \"
noremap « 2
noremap 2 <
noremap » 3
noremap 3 >
noremap ( 4
noremap 4 (
noremap ) 5
noremap 5 )
